<aura:component implements="lightning:appHomeTemplate">
    <aura:attribute name="column1" type="Aura.Component[]" />
    <aura:attribute name="column2" type="Aura.Component[]" />
    <aura:attribute name="column3" type="Aura.Component[]" />
    <aura:attribute name="column4" type="Aura.Component[]" />
    <aura:attribute name="column5" type="Aura.Component[]" />
    <aura:attribute name="column6" type="Aura.Component[]" />
    <aura:attribute name="column7" type="Aura.Component[]" />
    
    <div>
        <lightning:layout horizontalAlign="spread" verticalAlign="stretch" pullToBoundary="small">
            <lightning:layoutItem size="6" class="paddingleft75rem width43per" flexibility="auto">
                {!v.column1}
            </lightning:layoutItem>
            <lightning:layoutItem size="1" class="paddingleft7px width12per" flexibility="auto">         
                {!v.column2}
            </lightning:layoutItem>
            <lightning:layoutItem size="1" class="paddingleft7px width12per" flexibility="auto">         
                {!v.column3}
            </lightning:layoutItem>
            <lightning:layoutItem size="4" class="paddingleft7px paddingright75rem width33per" flexibility="auto">
                {!v.column4}
            </lightning:layoutItem>
        </lightning:layout>
        <lightning:layout horizontalAlign="spread" pullToBoundary="small">
            <lightning:layoutItem class="paddingtop0px" size="4" flexibility="grow" 
                                  padding="around-small">
                {!v.column5}
            </lightning:layoutItem>
            <lightning:layoutItem size="4" class="paddingtop0px paddingleftright0px" flexibility="grow" 
                                  padding="around-small">
                {!v.column6}
            </lightning:layoutItem>
            <lightning:layoutItem class="paddingtop0px" size="4" flexibility="grow" 
                                  padding="around-small">
                {!v.column7}
            </lightning:layoutItem>
        </lightning:layout>
    </div> 
</aura:component>